                br
                +titles("masked text field", "default")
                +input("text", "ДД.ММ.ГГГГ", "date")
                +input("text", "ДД.ММ.ГГГГ", "datetimepicker")
                
            div.grid-column-two
                h3.title-small checkbox buttons
            div.grid-column-three
                h3.title-small range slider
                
        
            div.grid-item
            div.grid-item
            
